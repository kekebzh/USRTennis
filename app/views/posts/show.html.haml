%section.py-4.text-center.text-lg-left
  .row 
    .col-sm-1
    .col-sm-11.col-xs-12.blog-content
      %h3= @post.title
      %img
        = image_tag @post.image, class: 'img-fluid'
      %p= raw @post.content
= link_to "Edit", edit_post_path(@post)
= link_to "Delete", @post, method: :delete, data: { confirm: "Are you sure?" }