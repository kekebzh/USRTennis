.container
  %form.form-signin
    %h2.form-signin-heading Please sign in
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = f.input :email, class: "form-control", autofocus: "", placeholder: "Email address", required: "", type: "email"
      = f.input :password, class: "form-control", placeholder: "Password", required: "", type: "password"
      = f.button :submit, class: "btn btn-lg btn-primary btn-block"

      = render "devise/shared/links"